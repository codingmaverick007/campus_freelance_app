class Job {
  String id;
  String title;
  String description;
  String status; // 'opened', 'closed', 'completed'
  String clientId;
  String location;
  DateTime createdAt;
  List<String> jobTags;

  Job({
    required this.id,
    required this.title,
    required this.description,
    required this.status,
    required this.clientId,
    required this.location,
    required this.createdAt,
    required this.jobTags,
  });

  factory Job.fromFirestore(DocumentSnapshot doc) {
    Map<String, dynamic> data = doc.data() as Map<String, dynamic>;
    return Job(
      id: doc.id,
      title: data['jobTitle'] ?? '',
      description: data['jobDescription'] ?? '',
      status: data['status'] ?? 'opened',
      clientId: data['uploadedBy'] ?? '',
      location: data['location'] ?? '',
      createdAt: (data['createdAt'] as Timestamp).toDate(),
      jobTags: List<String>.from(data['jobTags'] ?? []),
    );
  }

  Map<String, dynamic> toMap() {
    return {
      'jobTitle': title,
      'jobDescription': description,
      'status': status,
      'uploadedBy': clientId,
      'location': location,
      'createdAt': createdAt,
      'jobTags': jobTags,
    };
  }
}
